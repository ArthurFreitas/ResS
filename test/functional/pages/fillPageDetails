package pages
import geb.Page


class GeneratorCreatePage extends Page{

    static url = "GestorCadastre/create"

    static at = {
        GetPageTitle gp = new GetPageTitle()
        def gerador = gp.getMessage("default.generator.label")
        def titulo = gp.getMessage("default.create.label") + " " + gerador
        title ==~ titulo
    }

    def fillGeneratorDetails(){

        $("form").name = "corporation"
        $("form").cnpj = "testecnpj1"
        $("form").address = "Bubble Street number 7"
        $("form").telephone = "81-85712512"
        $("form").email = "0@hka.com"
        $("form").website = "http://2.bp.blogspot.com/-ZVxEkrY04Fs/U15D5uCL-xI/AAAAAAAAOdQ/pJ-Wc99LmPY/s1600/logo_col_874x288.png" 

    }

    def selectCreateGestor(){
        $("input", name: "create").click()
    }

}
