Given(~'^nao foi criada um relatorio de coleta do dia "([^"]*)"$'){ Date dia ->
   data = HistoricoDeColetas.findByDia(dia)
    assert data == null
}

When (~'^crio um novo relatorio do dia "([^"]*)"$'){ Date dia ->
    HistoricoDeColetas.createRelatorio("nome",101,dia)


}

Then (~'^o relatorio do dai "([^"]*)" é adicionado ao historico de coletas$'){ Date dia ->
    relatorio = HistoricoDeColetas.findByDia(dia)
    assert HistoricoDeColetas.save(relatorio)
}

